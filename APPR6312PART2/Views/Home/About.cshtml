@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="text-center mb-4 text-success">About Us</h1>

            <div class="card mb-4 border-success">
                <div class="card-body">
                    <h3 class="card-title text-success">Our Mission</h3>
                    <p class="card-text">
                        The Gift Of The Givers is dedicated to providing immediate relief and long-term support
                        to communities affected by natural disasters and emergencies worldwide. We believe in the power of
                        collective action and community resilience.
                    </p>
                </div>
            </div>

            <div class="card mb-4 border-warning">
                <div class="card-body">
                    <h3 class="card-title text-success">What We Do</h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Coordinate disaster response efforts</li>
                        <li class="list-group-item">Manage resource donations and distribution</li>
                        <li class="list-group-item">Recruit and organize volunteers</li>
                        <li class="list-group-item">Provide real-time incident reporting</li>
                        <li class="list-group-item">Support community rebuilding initiatives</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>